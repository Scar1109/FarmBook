<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FarmBook"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmBook"
        tools:targetApi="31">
        <activity
            android:name=".modules.EditItemActivity"
            android:exported="false" />
        <activity
            android:name=".modules.ViewAllItemsActivity"
            android:exported="false" />
        <activity
            android:name=".modules.AddItemActivity"
            android:exported="false" />
        <activity
            android:name=".modules.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".modules.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".modules.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".modules.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>